@charset "utf-8";
*{
	margin:0;
	padding:0;
	list-style:none;
	border:0;
}
body{
	width:100%;
	margin:0 auto;
	overflow:hidden;
}

/* main_image */
.main_visual{
	/*height:200px;*/
	border-top:1px solid #d7d7d7;
	overflow:hidden;
	position:relative;
}
.main_image{
	/*height:200px;*/

	overflow:hidden;
	position:relative;
}
.main_image ul{
	width:9999px;
	/*height:10em;*/
	/*height:auto !important;*/
	/*height:100px; 假定最低高度是200px*/
	min-height:100px;
	overflow:hidden;
	/*position:absolute;*/
	position:relative;
	top:0;
	left:0;
}
.main_image li{
	float:left;
	width:100%;
	/*min-height:100px;*/
	/*min-width: 500px;*/
	/*height:200px;*/
}
.main_image li span{
	display:block;
	width:100%;
	/*height:200px;*/
}
.main_image li a{
	display:block;
	/*width:100%;
	height:200px;*/
}
.main_image li img{
	  z-index: 1;
  height: auto;
  max-width: 640px;
  min-width: 320px;
  width: 100%
}
.main_image li .img_1{
	background:url('../../images/ads/2015jiandingwap.jpg') center top no-repeat;
}
.main_image li .img_2{
	background:url('../../images/ads/2015zhanshiwap.jpg') center top no-repeat;
}
.main_image li .img_3{
	background:url('../../images/banner0327.jpg') center top no-repeat;
}
.main_image li .img_4{
	background:url('../../images/500_200_01.jpg') center top no-repeat;
}
