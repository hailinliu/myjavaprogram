<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/tab_hudong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tab_img_hudong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tab_address_pressed" />

        <TextView
            android:id="@+id/txt_hudong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_hudong"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_jieyue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tab_img_jieyue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tab_settings_normal" />

        <TextView
            android:id="@+id/txt_jieyue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_jieyue"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_faxian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tab_img_qiangzuo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tab_weixin_normal" />

        <TextView
            android:id="@+id/txt_faxian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_faxian"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>