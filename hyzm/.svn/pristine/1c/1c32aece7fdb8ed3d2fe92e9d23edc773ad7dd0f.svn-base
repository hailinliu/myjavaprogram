@charset "utf-8";
/* CSS Document */
/*公共样式*/
.fl{
	float: left;
}
.fr{
	float: right;
}
.red{
	color: #E1331B;
}
body{
	background: #fff;
	font-family:"微软雅黑",arial;
}
a{
	font-family:"微软雅黑",arial;
}
.foot_hb{
	margin-top: 0 !important;
}
/*a:hover{
	text-decoration: underline !important;
}*/


/*公共box*/
#sj_mainbox{
	width: 1140px;
	min-width: 1140px;
	margin: 10px auto 0;
	/*height: 1312px;*/
	overflow: hidden;
	padding-bottom: 20px;
}
/*标题 nav菜单*/
.sj_titbox{
	height:42px;
	border-bottom: 1px solid #E6E4E7;
	line-height: 42px;
	margin-bottom: 20px;
	position:relative;
}
.sj_titbox a{
	float:left;
	font-size: 16px;
	/*font-weight: bold;
	*/
	width: 98px;
	margin-right: 40px;
	text-align: center;
	font-family:"微软雅黑",arial;

}

.sj_titbox a:hover{
	color: #fff;
	background:url(../../images/flagship/tit_bg.jpg) center top no-repeat;
}
.tit_current{
	background:url(../../images/flagship/tit_bg.jpg) center top no-repeat;
	color: #fff;
}

/* 二层导航说明*/
.qj_video_head{
	height: 36px;
	width: 841px;
	font-size: 14px;
	line-height: 36px;
	position: relative;
}
.qj_sy_dot{
	height: 36px;
	width: 14px;
	display: block;
	margin-right: 20px;
	background:url(../../images/flagship/qj_videos_top_bg.jpg) center center no-repeat;
}
.qj_video_line{
	position: absolute;
	bottom: 0;
	right: 0;
	z-index: -1;
	width: 590px;
	height: 36px;
	background:url(../../images/flagship/qj_video_top_bg2.jpg) center center no-repeat;
}
.mianbao_tit{
	background: #fff;
	padding-right: 20px;
}

/*布局*/

/*左半部分*/
.qjsj_left{
	width: 841px;
	overflow: hidden;
}

/*右半部分*/
.qjsj_right{
	width: 280px;
	overflow: hidden;
}
/*商家信息*/
.shop_news{
	width: 278px;
	height: 329px;
	border:1px solid #E0E0E0;
	border-top: 4px solid #E0E0E0;
}
.relation_box{
	height: 88px;
}
.relation_box img{
	float: left;
}
.center_img{
	margin:0 7px;
}
.shop_name{
	height: 56px;
	font-size: 16px;
	line-height: 56px;
	padding-left: 9px;
	/*font-weight: bold;
	*/
	color: #2D2D2D;
}
.shop_namepic{
	margin-left: 10px;
}
.shop_details{
	margin-left: 10px;
	padding-top:5px;
}
.shop_details li{
	line-height: 30px;
}
.map_box{
	height: 275px;
	margin-top: 20px;
}
.map_box button{
	background-color: #A1C764;
	width: 120px;
	height: 30px;
	cursor: pointer;
	color: #fff;
	margin-top:4px;
}
.shop_info{
	border:1px solid #E0E0E0;
	border-top: 4px solid #E0E0E0;
	/*height: 329px;*/
	overflow: hidden;
	width: 278px;
	margin-top: 22px;
}
.shop_infos{
	font-size: 16px;
	/*font-weight: bold;
	*/
	color: #2D2D2D;
	line-height: 56px;
	padding-left: 9px;
}
.shop_infoss{
	text-indent: 2em;
	line-height: 25px;
	padding:0 10px;
}

/*商家动态*/
.sjtit_news{
	border: 1px dotted #CCC;
	border-right: 0;
	border-left: 0;
	padding:  10px 0;
	margin: 20px 0;
}
.sjtit_news h3{
	font-size: 16px;
	color: #000;
	font-family: "微软雅黑";
	font-weight: bold;
	/*padding-left: 15px;*/
	margin: 10px 0;
}
.sjtit_news ul li{
	line-height: 30px;
	background:url(../../images/flagship/qj_dot.jpg) left center no-repeat;
	padding-left: 15px;
	margin-left: 10px;
	text-align:left;
	width: 400px;
	height:30px;
}
.sjtit_news ul li a{
	float: left;
	font-family: arial;
	white-space: nowrap;
	/*width: 270px;*/
	overflow: hidden;
}

.sjtit_news ul li span{
	float: left;
	margin-left: 25px;
	color: #666;
}


/*分页*/
.qj_video_ye{
	height: 68px;
	clear: both;
	line-height: 68px;
}

.qj_video_ye a{
	height: 3px;
	padding:8px;
	border:1px solid #CCC;
}
.qj_video_ye .page_on,.qj_video_ye a:hover{
	background: #E40707;
	color: #fff;
}